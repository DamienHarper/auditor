{
  "name": "damienharper/auditor",
  "type": "library",
  "description": "The missing audit log library.",
  "keywords": ["doctrine", "audit", "audit-log", "audit-trail"],
  "license": "MIT",
  "authors": [
    {
      "name": "Damien Harper",
      "email": "damien.harper@gmail.com"
    }
  ],
  "require": {
    "php": ">=8.0",
    "ext-json": "*",
    "doctrine/dbal": "^2.13.1|^3.2",
    "doctrine/orm": "^2.13",
    "symfony/cache": "^5.4|^6.0",
    "symfony/event-dispatcher": "^5.4|^6.0",
    "symfony/lock": "^5.4|^6.0",
    "symfony/options-resolver": "^5.4|^6.0"
  },
  "suggest": {
    "damienharper/auditor-bundle": "Integrate auditor library in your Symfony projects."
  },
  "autoload": {
    "psr-4": {
      "DH\\Auditor\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "DH\\Auditor\\Tests\\": "tests"
    }
  },
  "require-dev": {
    "bamarni/composer-bin-plugin": "^1.8",
    "doctrine/data-fixtures": "^1.5.3",
    "gedmo/doctrine-extensions": "^3.0",
    "symfony/var-dumper": "^5.4|^6.0"
  },
  "scripts": {
    "bin": "echo 'bin not installed'",
    "test": "php -d pcov.enabled=1 ./vendor/bin/phpunit --colors=always",
    "csfixer": "vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.php --using-cache=no --verbose --ansi",
    "cs-check": "vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.php --using-cache=no --verbose --ansi --dry-run",
    "phpstan": "php -d memory_limit=1G ./vendor/bin/phpstan --ansi analyse src",
    "rector": "vendor/bin/rector",
    "rector-check": "vendor/bin/rector --dry-run",
    "update-tools": "composer bin all u"
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "composer/package-versions-deprecated": true,
      "bamarni/composer-bin-plugin": true
    }
  },
  "extra": {
    "branch-alias": {
      "dev-master": "4.x-dev",
      "dev-3.x": "3.x-dev",
      "dev-2.x": "2.x-dev",
      "dev-1.x": "1.x-dev"
    },
    "bamarni-bin": {
      "bin-links": true,
      "target-directory": "tools",
      "forward-command": true
    }
  }
}
